Vagrant.configure("2") do |config| 
  config.vm.box = "debian/bookworm64"

  config.vm.define "tierra" do |master|
    master.vm.hostname = "tierra.sistema.test"
    master.vm.network "private_network", ip: "192.168.57.103"
    master.vm.provision "shell", name: "update", inline: <<-SHELL
      sudo apt-get update
      sudo apt-get install -y bind9
      cp -v /vagrant/files/named /etc/default/named
      sudo systemctl restart named
      cp -v /vagrant/named.conf.options /etc/bind/named.conf.options
      cp -v /vagrant/files/named.conf.local /etc/bind/named.conf.local
      cp -v /vagrant/files/sistema.test.zone.dns /var/lib/bind/sistema.test.zone.dns
      cp -v /vagrant/files/57.168.192.zone /var/lib/bind/57.168.192.zone
      cp -v /vagrant/files/resolv.conf /etc/resolv.conf
      sudo systemctl restart bind9
    SHELL
  end

  config.vm.define "tierra" do |slave|
    slave.vm.hostname = "venus.sistema.test"
    slave.vm.network "private_network", ip: "192.168.57.102"
    slave.vm.provision "shell", name: "update", inline: <<-SHELL
      sudo apt-get update
      sudo apt-get install -y bind9
      cp -v /vagrant/files/named /etc/default/named
      sudo systemctl restart named
      cp -v /vagrant/files/named.conf.options /etc/bind/named.conf.options
      cp -v /vagrant/files/named.conf.local /etc/bind/named.conf.local
      sudo systemctl restart bind9
    SHELL
  end
end