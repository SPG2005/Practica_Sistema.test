zone "sistema.test.zone" {
    type master;
    file "/var/lib/bind/sistema.test.zone.dns";
    allow-transfer { 192.168.57.102; };
    allow-query { 127.0.0.0/8; 192.168.57.0/24; };
};

zone "57.168.192.zone" {
    type master;
    file "/var/lib/bind/57.168.192.zone";
    allow-transfer { 192.168.57.102; };
    allow-query { 127.0.0.0/8; 192.168.57.0/24; };
};